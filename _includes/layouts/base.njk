<!doctype html>
<html lang="{{ metadata.language }}" class="h-full">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<link rel="alternate" href="feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">

		{%- css %}
		{% include "public/css/tailwind.css" %}
		{% endcss %}
		<style>{% getBundle "css" %}</style>
	</head>
	<body class="bg-white text-gray-800 font-sans leading-relaxed flex flex-col min-h-full">
		{# <header class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-white py-6">
			<div class="container mx-auto px-4">
				<div class="flex items-center justify-between">
					<a href="/" class="text-3xl font-extrabold hover:opacity-90 transition-opacity">
						{{ metadata.title }}
					</a>
					<nav>
						<ul class="flex space-x-6 text-lg">
							{%- for entry in collections.all | eleventyNavigation %}
							<li>
								<a href="{{ entry.url }}" class="hover:text-yellow-300 {% if entry.url == page.url %}underline{% endif %}">
									{{ entry.title }}
								</a>
							</li>
							{%- endfor %}
						</ul>
					</nav>
				</div>
			</div>
		</header> #}
		<header class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-white py-6">
				<div class="container mx-auto px-4">
						<div class="flex items-center justify-between">
								<!-- Logo -->
								<a href="/" class="text-3xl font-extrabold hover:opacity-90 transition-opacity">
										{{ metadata.title }}
								</a>

								<!-- Hamburger Button -->
								<button id="menu-toggle" class="block md:hidden text-white focus:outline-none">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
												<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
										</svg>
								</button>

								<!-- Navigation Menu -->
								<nav id="menu" class="hidden md:flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-6 text-lg md:items-center">
										<ul class="flex flex-col md:flex-row md:space-x-6">
												{%- for entry in collections.all | eleventyNavigation %}
												<li>
														<a href="{{ entry.url }}" class="block md:inline-block hover:text-yellow-300 {% if entry.url == page.url %}underline{% endif %}">
																{{ entry.title }}
														</a>
												</li>
												{%- endfor %}
										</ul>
								</nav>
						</div>
				</div>
		</header>

		<main id="skip" class="container mx-auto px-4 py-8 flex-grow">
			<div class="prose prose-lg prose-indigo max-w-none">
				{{ content | safe }}
			</div>
		</main>

		<footer class="bg-gray-100 border-t border-gray-200 py-8">
			<div class="container mx-auto px-4 text-center">
				<p class="text-gray-600">
					&copy; {{ metadata.title }} - Built with
					<a href="https://www.11ty.dev/" class="text-blue-600 hover:text-blue-800">Eleventy</a>
				</p>
				<div class="mt-4 space-x-4">
					<a href="#" class="text-gray-500 hover:text-blue-500">Privacy Policy</a>
					<a href="#" class="text-gray-500 hover:text-blue-500">Terms of Service</a>
					<a href="#" class="text-gray-500 hover:text-blue-500">Contact</a>
				</div>
			</div>
		</footer>

		<script type="module" src="{% getBundleFileUrl "js" %}"></script>

		<script>
			document.addEventListener('DOMContentLoaded', () => {
					const menuToggle = document.getElementById('menu-toggle');
					const menu = document.getElementById('menu');

					menuToggle.addEventListener('click', () => {
							menu.classList.toggle('hidden');
					});
			});
		</script>
	</body>
</html>
